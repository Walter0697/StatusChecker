datasource db {
  url      = env("DATABASE_URL_WITH_SCHEMA")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model user {
  id              Int      @id @default(autoincrement())
  username        String
  password        String
  createdAt       DateTime @default(now())
  deletedAt       DateTime?
}

model group {
  id              Int      @id @default(autoincrement())
  label           String
  displayOrder    Int
  color           String
  createdAt       DateTime @default(now())
  createdBy       Int
  updatedAt       DateTime?
  updatedBy       Int?
  deletedAt       DateTime?
  deletedBy       Int?
}

model website {
  id              Int      @id @default(autoincrement())
  label           String
  groupId         Int
  checkURL        String
  checkObject     String
  checkType       String
  checkKey        String
  success         Boolean
  lastCheckTime   DateTime?
  respondCode     String?
  respondMessage  String?
  enabled         Boolean
  createdAt       DateTime @default(now())
  createdBy       Int
  updatedAt       DateTime?
  updatedBy       Int?
  deletedAt       DateTime?
  deletedBy       Int?
}